{
  "$schema": "http://json-schema.org/draft/2020-12/schema",
  "title": "ERP Invoice",
  "type": "object",
  "properties": {
    "documentNumber": { "type": "string" },
    "documentType": {
      "type": "string",
      "enum": ["AP_INVOICE", "AR_INVOICE", "CREDIT_MEMO"]
    },
    "supplierCode": { "type": "string" },
    "supplierName": { "type": "string" },
    "postingDate": { "type": "string", "format": "date" },
    "dueDate": { "type": "string", "format": "date" },
    "currencyCode": { "type": "string", "enum": ["USD", "EUR", "GBP", "CAD"] },
    "paymentTermCode": {
      "type": "string",
      "enum": ["N15", "N30", "N45", "IMMEDIATE"]
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "sku": { "type": "string" },
          "description": { "type": "string" },
          "uom": { "type": "string", "enum": ["EA", "CS", "BOX", "PKG"] },
          "qty": { "type": "number" },
          "price": { "type": "number" },
          "lineAmount": { "type": "number" }
        },
        "required": ["sku", "description", "qty", "price", "lineAmount"]
      }
    },
    "taxes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "taxCode": { "type": "string", "enum": ["SALES", "VAT", "GST"] },
          "taxPercent": { "type": "number" },
          "taxAmount": { "type": "number" }
        },
        "required": ["taxCode", "taxPercent", "taxAmount"]
      }
    },
    "totalAmount": { "type": "number" },
    "statusCode": { "type": "string", "enum": ["00", "01", "02", "99"] }
  },
  "required": [
    "documentNumber",
    "documentType",
    "supplierCode",
    "supplierName",
    "postingDate",
    "currencyCode",
    "items",
    "totalAmount",
    "statusCode"
  ]
}